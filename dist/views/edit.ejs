<%- include header %>
<% if (success) { %>
<div class="alert alert-success">
	<%= success %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger">
	<%= error %></div>
<% } %>
<form class="form-horizontal" role="form" action="edit" method="post">
	<div class="form-group">
		<label for="inputTitle" class="col-sm-2 control-label">数据</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="inputTitle" value="<%= news.title %>" name="title" placeholder="请添加数据"></div>
	</div>
	<div class="form-group">
		<label for="inputSign" class="col-sm-2 control-label">符号</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="inputSign" value="<%= news.sign %>" name="sign"></div>
	</div>
	<div class="form-group">
		<label for="inputUnit" class="col-sm-2 control-label">单位</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="inputUnit" value="<%= news.unit %>" name="unit"></div>
	</div>
	<div class="form-group">
		<label for="inputSubtitle" class="col-sm-2 control-label">副标题</label>
		<div class="col-sm-10">
			<textarea class="form-control" rows="2" id="inputSubtitle" name="subtitle" placeholder="请添加副标题"><%- news.subtitle %></textarea>
		</div>
	</div>
	<div class="form-group">
		<label for="inputText" class="col-sm-2 control-label">正文</label>
		<div class="col-sm-10">
			<script type="text/plain" id="editor" style="width:100%;height:400px;" name="richText">
			<%- news.richText %>
			</script>
		</div>
	</div>
	<div class="form-group">
		<label for="inputText" class="col-sm-2 control-label">发布对象</label>
		<div class="col-sm-4">
			<textarea class="form-control" rows="2" name="listeners"><%- news.listeners %></textarea>
		</div>
		<label for="inputText" class="col-sm-2 control-label">短信内容</label>
		<div class="col-sm-4 " >
			<textarea class="form-control" rows="10" name="text"><%- news.text %></textarea>
		</div>
	</div>
	<div class="form-group">
		<label for="inputDate" class="col-sm-2 control-label">定时发布</label>
		<div class="col-sm-5">
			<input type="text" class="form-control" id="inputDate" value="<%= news.date %>" name="date" placeholder="2013-11-13 14:35:10"></div>
		<div class="col-sm-5">
			<button type="submit" class="btn btn-primary">保存</button>
		</div>
	</div>
</div>
</form>
<script type="text/javascript">
		window.onload=function(){
			var ue = UM.getEditor('editor');
		}
	</script>
<%- include footer %>