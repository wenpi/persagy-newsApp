<%- include header %>
<% if (success) { %>
<div class="alert alert-success">
	<%= success %></div>
	<% } %>
	<% if (error) { %>
<div class="alert alert-danger">
	<%= error %></div>
	<% } %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>数据</th>
				<th>副标题</th>
				<th>发布对象</th>
				<th>日期</th>
				<th>编辑</th>
				<th>删除</th>
			</tr>
		</thead>
		<tbody>
			<% news.forEach(function (item, index) { %>
				<tr>
					<td><%= item.sign + item.title + item.unit %></td>
					<td><%= item.subtitle %></td>
					<td><%= item.listeners %></td>
					<td><%= item.date %></td>
					<td><a href="/edit?id=<%=item._id %>"><span class="glyphicon glyphicon-edit"></span></a></td>
					<td><a href="#"><span data-id="<%=item._id %>" class="glyphicon glyphicon-remove"></span></a></td>
				</tr>
			<% }) %>
		</tbody>
	</table>
	<script type="text/javascript">
		window.onload=function(){
			$('.glyphicon-remove').click(function(){
				$.ajax({
					url: '/del',
					type: 'post',
					dataType: 'json',
					data: {
						id: $(this).data('id')
					},
					success: function() {
						window.location.reload();
					}
				});
			});
		};
	</script>

<%- include footer %>